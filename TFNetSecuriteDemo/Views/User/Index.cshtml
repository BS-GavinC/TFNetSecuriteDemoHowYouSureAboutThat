@{
}

@model List<User>;

<h1>Bienvenu dans la page des users</h1>

<a asp-controller="User" asp-action="Create"><button class="btn btn-primary">Create User</button></a>

@foreach(User user in Model){
    <p>@user.Firstname @user.Lastname</p>

    <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id"><button class="btn btn-success">Voir</button></a>
    <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id"><button class="btn btn-warning">Update</button></a>
    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"><button class="btn btn-danger">Delete</button></a>

}
